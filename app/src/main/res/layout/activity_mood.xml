<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MoodActivity">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="PLEASE TOUCH ME"
        android:textColor="#2196F3"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view4"
        android:layout_width="680dp"
        android:layout_height="47dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/backg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnFinish" />

    <Button
        android:id="@+id/btnFinish"
        android:layout_width="280dp"
        android:layout_height="49dp"
        android:layout_marginTop="84dp"
        android:background="@drawable/btn_signin"
        android:text="FINISH"
        android:textSize="18sp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgbtnHappy" />

    <ImageButton
        android:id="@+id/imgbtnHappy"
        android:layout_width="176dp"
        android:layout_height="121dp"
        android:layout_marginTop="4dp"
        android:background="@null"
        app:layout_constraintEnd_toEndOf="@+id/tv_name"
        app:layout_constraintStart_toStartOf="@+id/tv_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        app:srcCompat="@drawable/happyy" />

    <ImageButton
        android:id="@+id/imgbtnNormal"
        android:layout_width="170dp"
        android:layout_height="117dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="96dp"
        android:layout_marginRight="96dp"
        android:background="@null"
        app:layout_constraintEnd_toStartOf="@+id/imgbtnHappy"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgbtnHappy"
        app:srcCompat="@drawable/normall" />

    <ImageButton
        android:id="@+id/imgbtnSad"
        android:layout_width="156dp"
        android:layout_height="139dp"
        android:layout_marginStart="76dp"
        android:layout_marginLeft="76dp"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="@+id/imgbtnNormal"
        app:layout_constraintStart_toEndOf="@+id/imgbtnHappy"
        app:layout_constraintTop_toTopOf="@+id/imgbtnNormal"
        app:srcCompat="@drawable/sadd" />



</androidx.constraintlayout.widget.ConstraintLayout>